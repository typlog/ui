{
  "compilerOptions": {
    "target": "es2021",
    "lib": [
      "es2021"
    ],

    "module": "es2022",
    "moduleResolution": "Bundler",
    "types": [
      "@cloudflare/workers-types"
    ],
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": false,
    "noEmit": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./lib/*"]
    }
  },
  "exclude": [
    "test"
  ],
  "include": [
    "functions/**/*.ts",
    "lib/*.ts"
  ]
}
